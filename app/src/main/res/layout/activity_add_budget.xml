<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:padding="15dp"
    tools:context="com.example.siamakmohsenisam.budget.AddBudgetActivity">

    <TextView
        android:id="@+id/textViewTitleI"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:gravity="left|start|"
        android:textStyle="bold"
        android:text="TextView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/boxwhite"
            android:padding="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/mario" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/boxwhite"
                android:orientation="vertical"
                android:padding="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewDateI"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:textColor="@color/colorWhite" />

                    <ImageButton
                        android:id="@+id/imageButtonDateI"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/date" />

                </LinearLayout>

                <EditText
                    android:id="@+id/editTextAmountI"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="E.g. 2000$"
                    android:layout_marginBottom="10dp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorHint"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewUpI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/edit_text"
                    android:textColor="@color/colorgold"
                    android:text="TextView" />

                <Spinner
                    android:id="@+id/spinnerUpI"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/textViewDownI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/edit_text"
                    android:textColor="@color/colorgold"
                    android:text="TextView" />

                <Spinner
                    android:id="@+id/spinnerDownI"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/colorWhite" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButtonCancelI"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/cancel" />

                <ImageButton
                    android:id="@+id/imageButtonSaveI"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/save" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
